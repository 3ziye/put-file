{
  "name": "put-file Development Environment",
  "dockerFile": "Dockerfile",
  "context": "..",
  
  // Set working directory
  "workspaceFolder": "/workspace",
  
  // Set terminal type
  "terminal.integrated.shell.linux": "/bin/bash",
  
  // Port mapping
  "forwardPorts": [8080, 2345],
  
  // VSCode extensions to install
  "extensions": [
    "golang.go",
    "editorconfig.editorconfig",
    "ms-azuretools.vscode-docker",
    "esbenp.prettier-vscode",
    "eamodio.gitlens",
    "github.vscode-pull-request-github",
    "ms-vscode-remote.remote-containers"
  ],
  
  // Container startup command
  "postCreateCommand": "",
  
  // Environment variables
  "containerEnv": {
    "GO111MODULE": "on",
    "SERVER_PORT": "8080",
    "SERVER_ROOT": "/workspace/uploads",
    "SERVER_LOG_LEVEL": "DEBUG"
  },
  
  // Mount volumes
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=go-pkg,target=/go/pkg,type=volume",
    "source=go-build,target=/root/.cache/go-build,type=volume"
  ],
  
  // Custom container features
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.eol": "\n"
      }
    }
  },
  
  // Run arguments
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ]
}