{
  "name": "GoStaticServe Development Environment",
  "dockerFile": "Dockerfile",
  "context": "..",
  
  // 设置工作目录
  "workspaceFolder": "/workspace",
  
  // 设置终端类型
  "terminal.integrated.shell.linux": "/bin/bash",
  
  // 端口映射
  "forwardPorts": [8080, 2345],
  
  // 安装的VSCode扩展
  "extensions": [
    "golang.go",
    "editorconfig.editorconfig",
    "ms-azuretools.vscode-docker",
    "esbenp.prettier-vscode",
    "eamodio.gitlens",
    "github.vscode-pull-request-github",
    "ms-vscode-remote.remote-containers"
  ],
  
  // 容器启动命令
  "postCreateCommand": "go mod tidy && go install github.com/cosmtrek/air@latest && go install github.com/go-delve/delve/cmd/dlv@latest",
  
  // 环境变量
  "containerEnv": {
    "GO111MODULE": "on",
    "SERVER_PORT": "8080",
    "SERVER_ROOT": "/workspace/uploads",
    "SERVER_LOG_LEVEL": "DEBUG"
  },
  
  // 挂载卷
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=go-pkg,target=/go/pkg,type=volume",
    "source=go-build,target=/root/.cache/go-build,type=volume"
  ],
  
  // 自定义容器功能
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.eol": "\n"
      }
    }
  },
  
  // 运行参数
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ]
}